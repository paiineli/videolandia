@model videolandia.Models.Filme

@{
    ViewData["Title"] = "Excluir Filme";
}
<head>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>

<h1>Excluir Filme</h1>

<h3>Você tem certeza de que deseja excluir este filme?</h3><br/>
<div>
    <h4>Detalhes do Filme</h4>
    <hr />
    <dl class="row">
        <!-- Nome do Filme -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeFilme)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeFilme)
        </dd>

        <!-- URL do Poster -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PosterUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PosterUrl)
        </dd>

        <!-- Data de Lançamento -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DtLancamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DtLancamento)
        </dd>

        <!-- Diretor -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Diretor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Diretor)
        </dd>
    </dl>

    <!-- Formulário de exclusão -->
    <form asp-action="Deletar">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" style="width: 200px;" /> 
        <a asp-action="Index" class="btn btn-dark" style="width: 200px;">Voltar para a Lista</a>
    </form>
</div>
