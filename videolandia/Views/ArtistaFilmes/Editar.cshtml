@model videolandia.Models.ArtistaFilme

@{
	ViewData["Title"] = "Editar Relação";
}
<head>
	<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>

<h1 class="mb-4">Editar Relação Artista - Filme</h1>

<div class="mt-4">
	<h4>Detalhes da Relação Artista - Filme</h4>
	<hr />
	<div class="row">
		<div class="col-md-6">
			<form asp-action="Editar">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<!-- ArtistaId hidden input -->
				<input type="hidden" asp-for="ArtistaId" />

				<!-- FilmeId hidden input -->
				<input type="hidden" asp-for="FilmeId" />

				<div class="form-group">
					<label asp-for="FilmeId" class="control-label">Filme</label>
					<select asp-for="FilmeId" class="form-control" asp-items="ViewBag.FilmeId"></select>
					<span asp-validation-for="FilmeId" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="Personagem" class="control-label">Personagem</label>
					<input asp-for="Personagem" class="form-control" placeholder="Nome do Personagem" />
					<span asp-validation-for="Personagem" class="text-danger"></span>
				</div>

				<div class="form-group mt-3">
					<input type="submit" value="Salvar Alterações" class="btn btn-primary" style="width: 200px;" />
				</div>
			</form>
		</div>
	</div>
</div>

<div class="mt-3">
	<a asp-action="Index" class="btn btn-dark" style="width: 200px;">Voltar para a Lista</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
