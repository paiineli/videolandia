@model videolandia.Models.Artista

@{
    ViewData["Title"] = "Deletar Artista";
}
<head>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>

<h1 class="mb-4">Excluir Artista</h1>

<h3>Você tem certeza que deseja excluir este artista?</h3><br/>
<div>
    <h4>Detalhes do Artista</h4>
    <hr />
    <dl class="row">
        <!-- Nome do Artista -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeArtista)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeArtista)
        </dd>

        <!-- Data de Nascimento -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DtNascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DtNascimento)
        </dd>

        <!-- País de Nascimento -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaisNascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaisNascimento)
        </dd>

        <!-- URL da Foto do Artista -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtistaUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtistaUrl)
        </dd>
    </dl>

    <!-- Formulário de Confirmação de Exclusão -->
    <form asp-action="Deletar">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger" style="width: 200px;">Excluir</button>
            <a class="btn btn-dark" style="width: 200px;" asp-action="Index">Voltar para a Lista</a>
        </div>
    </form>
</div>
