@model videolandia.Models.Artista

@{
	ViewData["Title"] = "Detalhes do Artista";
}
<head>
	<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>

<h1 class="mb-4">Detalhes do Artista</h1>

<div>
	<h4>Informações do Artista</h4>
	<hr />
	<dl class="row">
		<!-- Nome do Artista -->
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.NomeArtista)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.NomeArtista)
		</dd>

		<!-- Data de Nascimento -->
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.DtNascimento)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.DtNascimento)
		</dd>

		<!-- País de Nascimento -->
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.PaisNascimento)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.PaisNascimento)
		</dd>

		<!-- Foto do Artista -->
		<dt class="col-sm-2">
			Foto do Artista
		</dt>
		<dd class="col-sm-10">
			<img src="@Model.ArtistaUrl" height="150" style="border-radius: 10px; box-shadow: 3px 3px 5px rgba(0, 0, 0, 0.2);" />
		</dd>
	</dl>
</div>

<div>
	<h4>Filmes do Artista</h4>
	<hr />
	<div style="display: flex; flex-wrap: wrap; gap: 10px;">
		@foreach (var item in Model?.Filmes)
		{
			<div style="text-align: center; width: 150px; margin-bottom: 20px;">
				<a asp-area="" asp-controller="Filmes" asp-action="Detalhes" asp-route-id="@item.Filme.Id" style="display: block; text-decoration: none; color: inherit;">
					<img src="@item.Filme.PosterUrl" height="150" style="display: block; margin: 0 auto; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);" alt="@item.Filme?.NomeFilme" />
					<p style="margin-top: 10px; font-weight: bold; font-size: 1rem; color: #333;">@item.Filme?.NomeFilme</p>
				</a>
				<p style="font-size: 0.9rem; color: #777;">@item.Personagem</p>
			</div>

		}
	</div>
</div>
<br />
<div>
	@if (User.Identity.IsAuthenticated)
	{
		<a class="btn btn-primary" style="width: 200px;" asp-action="Editar" asp-route-id="@Model?.Id">Editar</a>
		<a class="btn btn-dark" style="width: 200px;" asp-action="Index">Voltar para a Lista</a>
	}
</div>

