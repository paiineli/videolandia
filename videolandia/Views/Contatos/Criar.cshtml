@model videolandia.Models.Contato

@{
    ViewData["Title"] = "Criar Contato";
}
<head>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>

<h1>Criar Contato</h1>

<h4>Contato</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Nome do Contato -->
            <div class="form-group">
                <label asp-for="NomeContato" class="control-label">Nome</label>
                <input asp-for="NomeContato" class="form-control" required />
                <span asp-validation-for="NomeContato" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Assunto -->
            <div class="form-group">
                <label asp-for="Assunto" class="control-label">Assunto</label>
                <input asp-for="Assunto" class="form-control" required />
                <span asp-validation-for="Assunto" class="text-danger"></span>
            </div>

            <!-- Mensagem -->
            <div class="form-group">
                <label asp-for="Mensagem" class="control-label">Mensagem</label>
                <textarea asp-for="Mensagem" class="form-control" rows="4" required></textarea>
                <span asp-validation-for="Mensagem" class="text-danger"></span>
            </div>
            <br/>
            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Criar Contato" class="btn btn-primary" style="width: 200px"/>
            </div>
            <br/>
        </form>
    </div>
</div>

<form asp-action="Index" class="d-inline">
    @if (User.Identity.IsAuthenticated)
    {
        <button type="submit" class="btn btn-dark" style="width: 200px">Voltar à Lista</button>
    }
</form>

<br/>
<br />
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
