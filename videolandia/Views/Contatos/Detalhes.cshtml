@model videolandia.Models.Contato

@{
    ViewData["Title"] = "Detalhes";
}
<head>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>

<h1>Detalhes do Contato</h1>

<div>
    <h4>Informações do Contato</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeContato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeContato)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assunto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assunto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mensagem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mensagem)
        </dd>
    </dl>
</div>
<br/>
<div>
    <a asp-action="Editar" asp-route-id="@Model?.Id" class="btn btn-primary" style="width: 200px;">Editar Contato</a> 
    <a asp-action="Index" class="btn btn-dark" style="width: 200px;">Voltar a Lista</a>
</div>
