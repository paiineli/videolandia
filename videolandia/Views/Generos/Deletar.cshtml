@model videolandia.Models.Genero

@{
    ViewData["Title"] = "Excluir Gênero";
}
<head>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>

<h1>Excluir Gênero</h1>

<h3>Você tem certeza que deseja excluir este gênero?</h3>
<br />
<div>
    <h4>Gênero: <strong>@Model.NomeGenero</strong></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome do Gênero
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeGenero)
        </dd>
    </dl>

    <form asp-action="Deletar" method="post" class="d-inline">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger" style="width: 200px;">Excluir</button>
    </form>
    <form asp-action="Index" method="get" class="d-inline">
        <button type="submit" class="btn btn-dark" style="width: 200px;">Voltar à Lista</button>
    </form>
</div>
