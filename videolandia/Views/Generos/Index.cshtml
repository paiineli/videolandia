@model IEnumerable<videolandia.Models.Genero>

@{
    ViewData["Title"] = "Lista de Gêneros";
}
<head>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>

<h1>Lista de Gêneros</h1>
<br/>
<p>
    <!-- Botão Criar Novo Gênero -->
    <a asp-action="Criar" class="btn btn-dark" style="width: 300px;">Criar Novo</a>
</p>



<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.NomeGenero)</th>
            <th>Opções</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NomeGenero)</td>
                <td>
                    <!-- Ações: Editar, Detalhes, Excluir -->
                    <div class="btn-group" role="group">
                        <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                        <a asp-action="Deletar" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
